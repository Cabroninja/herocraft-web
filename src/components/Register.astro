<!-- Diálogo de registro -->
<div id="register-dialog" class="dialog">
    <div class="dialog-content">
        <h2>Registrarse</h2>
        <form id="register-form">
          <input type="text" placeholder="Nickname" required>
          <input type="text" placeholder="Correo Electronico" required>
          <input type="password" placeholder="Contraseña" required>
          <input type="password" placeholder="Confirmar Contraseña" required>
          <div class="terms-container">
            <input type="checkbox" id="terms-checkbox" required>
            <label for="terms-checkbox">He leído y acepto los términos y condiciones</label>
          </div>
          <button type="submit">Registrarse</button>
        </form>
      </div>
</div>

<script>
    const registerDialog = document.getElementById('register-dialog');

    // Duplica la definición de toggleBodyScroll aquí
    function toggleBodyScroll(lock) {
        document.body.style.overflow = lock ? 'hidden' : 'auto';
    }
  
    // Funciones para mostrar y ocultar el diálogo
    function showDialog(dialog) {
      dialog.style.display = 'block';
      toggleBodyScroll(true);
    }
  
    function hideDialog(dialog) {
      dialog.style.display = 'none';
      toggleBodyScroll(false);
    }
  
    window.onclick = function(event) {
      if (event.target.classList.contains('dialog')) {
        hideDialog(event.target);
      }
    }
  
    const registerButton = document.getElementById('register-button');
    registerButton.addEventListener('click', () => {
      showDialog(registerDialog);
    });
  </script>

<style>

    .dialog {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      z-index: 999;
      justify-content: center;
      align-items: flex-start;
      padding-top: 20px;
    }
    
    .dialog-content {
      width: 30%;
      background-color: #13151a;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
      text-align: center;
      margin: auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    
    .dialog-content h2 {
        color: aqua;
        margin-bottom: 25px;
        font-family: 'Kanit', sans-serif;
        color: #b220cd;
        font-weight: 300;
        font-size: 32px;
        text-shadow: 0 0 3px rgba(231, 231, 231, 0.281);
    }
    
    .dialog form {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    
    .dialog input {
      padding: 10px;
      background-color: #1c1e27;
      border-radius: 5px;
      border: 1px solid #696969;
    }
    
    .dialog input:focus {
      border-color: #a549d3;
      outline: none;
    }
    
    .dialog input[type="text"], 
    .dialog input[type="password"] {
      color: #8b8b8b;
    }
    
    .dialog button {
        margin-top: 20px;
        margin-left: auto;
        margin-right: auto;
        padding: 10px;
        background-color: #a549d3;
        color: #fff;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        width: 150px;
        height: 40px;
        line-height: 20px;
        font-family: 'Kanit', sans-serif;
        color: #ffffff;
        font-weight: 400;
        font-size: 18px;
        transition: filter 0.3s ease;
    }
    
    .dialog button:hover {
        filter: brightness(80%);
    }
    

